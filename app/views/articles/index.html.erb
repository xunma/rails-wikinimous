<div class="text-center">
  <h1>All Articles</h1>
  <h3><%= link_to "<div class='btn btn-primary'><strong>+</strong> Add new article</div>".html_safe, new_article_path %></h3>
  <% @articles.reverse.each do |article| %>
    <div class="article">
      <h3><%= link_to article.title, article_path(article), class: "link" %></h3>
      <div class="trash">
        <%= link_to " <i class='far fa-trash-alt'></i>".html_safe, article_path(article), class: "link", method: :delete %>
      </div>
    </div>
  <% end %>



</div>

