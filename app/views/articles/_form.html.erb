<%= form_for(article) do |f| %>
  <div>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_field :content, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit %>
    </div>
  </div>
<% end %>
